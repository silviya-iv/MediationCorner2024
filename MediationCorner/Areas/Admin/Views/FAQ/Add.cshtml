@model FrequentlyAskedQuestionFormModel

@{
    ViewData["Title"] = "Добави нов въпрос";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Question"></label>
                <input asp-for="Question" class="form-control" placeholder="Въпрос...">
                <span asp-validation-for="Question" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer"></label>
                <input asp-for=" Answer " class="form-control" placeholder="Отговор...">
                <span asp-validation-for=" Answer " class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Добави" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
